# Set default behavior to automatically normalize line endings
* text=auto eol=lf

# Explicitly declare text files to always use LF
*.php text eol=lf
*.js text eol=lf
*.css text eol=lf
*.html text eol=lf
*.tpl text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.sql text eol=lf
*.sh text eol=lf
*.conf text eol=lf
*.ini text eol=lf
*.env text eol=lf

# Dockerfiles
Dockerfile* text eol=lf

# Git config files
.gitattributes text eol=lf
.gitignore text eol=lf
.editorconfig text eol=lf

# Denote binary files that should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
