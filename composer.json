{
    "name": "elfy/post-portal",
    "description": "A flexible post and update platform built on PHP and Smarty",
    "require": {
        "php": "^8.1",
        "intervention/image": "^2.7",
        "stripe/stripe-php": "^13.0",
        "openai-php/client": "^0.10.3",
        "symfony/http-client": "^6.4",
        "phpmailer/phpmailer": "^6.9",
        "smarty/smarty": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.11"
    },
    "autoload": {
        "psr-4": {
            "PostPortal\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Matt Visnovsky",
            "email": "matt@visnovsky.us"
        }
    ],
    "scripts": {
        "test": "phpunit",
        "stan": "phpstan analyse"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
